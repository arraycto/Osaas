.box {
  position: fixed;
  /* left: 0; */
  right: 0;
  z-index: 999;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  flex-direction: column;
  width: 600rpx;
}
.arrow {
  width: 0;
  height: 0;
  margin-right: 135rpx;
  border-width: 15rpx;
  border-style: solid;
  border-color:  transparent transparent #9c26b0 transparent;
}
.body {
  background-color: #9c26b0;
  box-shadow: 0 10rpx 20rpx -10rpx #9c26b0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  padding: 0 20rpx;
  margin-right: 10rpx;
}
.body > text {
  color: #FFF;
  font-size: 24rpx;
  font-weight: 400;
}

.modal {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1025;
  background-color: rgba(85, 84, 84, 0.8);
  padding: 20rpx;
}
.modal > view {
  margin: 60rpx 0;
  display: flex;
  /* align-items: center; */
  flex-direction: column;
}
.modal > view > text {
  font-size: 24rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  color: rgb(255, 255, 255);
}
.modal > view > image {
  border-radius: 10rpx;
}

.img-1{
  height: 70rpx;
  width: 80%;
  margin: auto;
}
.img-2{
  height: 400rpx;
  width: 80%;
  margin: auto;
}
.img-3{
  height: 168rpx;
  width: 80%;
  margin: auto;
}

.ok-btn {
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ok-btn > view {
  height: 60rpx;
  width: 160rpx;
  background-color: #9c26b0;
  box-shadow: 0 5rpx 10rpx -rpx #9c26b0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
}
.ok-btn > view > text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 400;
}
.btn-hover {
  opacity: 0.6;
}